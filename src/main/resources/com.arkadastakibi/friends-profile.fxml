<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="1100.0" styleClass="root" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arkadastakibi.controller.FriendsProfileController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-padding: 15 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnBack" mnemonicParsing="false" onAction="#AnaSayfayaGeriDon" styleClass="btn-secondary" text="← Geri Dön" />
                <Label text="Arkadaş Profili" textFill="#2d3436">
                    <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>

    <center>
        <StackPane BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>

                <HBox fx:id="boxProfileView" spacing="30.0">
                    <children>

                        <VBox alignment="TOP_CENTER" maxWidth="340.0" minWidth="300.0" prefHeight="500.0" prefWidth="320.0" spacing="15.0" styleClass="profile-gradient-card">
                            <children>
                                <StackPane>
                                    <children>
                                        <ImageView fx:id="imgProfile" fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" />
                                    </children>
                                </StackPane>

                                <VBox alignment="CENTER" spacing="2">
                                    <Label fx:id="lblName" styleClass="profile-name" text="Ad Soyad" />
                                    <Label fx:id="lblEmail" styleClass="profile-email" text="\@kullanici" />
                                </VBox>

                                <Label fx:id="lblBio" alignment="CENTER" maxWidth="260" styleClass="profile-bio" text="Biyografi..." textAlignment="CENTER" wrapText="true" />

                                <Separator opacity="0.3" prefWidth="200.0" style="-fx-background-color: black;" />

                                <Button fx:id="btnFollow" onAction="#toggleFollow" prefHeight="50.0" prefWidth="260.0"
                                        style="-fx-background-color: white; -fx-text-fill: #134E5E; -fx-background-radius: 15; -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                                        text="Takip Et">
                                    <effect>
                                        <DropShadow color="#00000033" height="15.0" radius="7.0" width="15.0" />
                                    </effect>
                                </Button>

                            </children>
                            <padding>
                                <Insets bottom="30" left="20" right="20" top="40" />
                            </padding>
                        </VBox>

                        <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                            <children>

                                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 15 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.03), 10, 0, 0, 2);">
                                    <children>

                                        <HBox spacing="10">
                                            <VBox alignment="CENTER" onMouseClicked="#showFollowingList" prefWidth="100.0" styleClass="stat-card">
                                                <children>
                                                    <Label fx:id="lblFollowing" styleClass="stat-number" text="0" textFill="#0984e3" />
                                                    <Label styleClass="stat-label" text="Takip Edilen" />
                                                </children>
                                            </VBox>

                                            <VBox alignment="CENTER" onMouseClicked="#showFollowersList" prefWidth="100.0" styleClass="stat-card">
                                                <children>
                                                    <Label fx:id="lblFollowers" styleClass="stat-number" text="0" textFill="#00b894" />
                                                    <Label styleClass="stat-label" text="Takipçi" />
                                                </children>
                                            </VBox>

                                            <VBox alignment="CENTER" onMouseClicked="#showMutualFollowersList" prefWidth="100.0" styleClass="stat-card">
                                                <children>
                                                    <Label fx:id="lblMutualFollowers" styleClass="stat-number" text="0" textFill="#e17055" />
                                                    <Label styleClass="stat-label" text="Ortak Takipçi" />
                                                </children>
                                            </VBox>
                                        </HBox>

                                        <Separator orientation="VERTICAL" />

                                        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                                            <Button fx:id="btnInstagram" onAction="#InstagramClicked" styleClass="social-icon-btn">
                                                <graphic>
                                                    <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                                                        <image>
                                                            <Image url="@../images/insta.png" />
                                                        </image>
                                                    </ImageView>
                                                </graphic>
                                            </Button>

                                            <Button fx:id="btnTwitter" onAction="#TwitterClicked" styleClass="social-icon-btn">
                                                <graphic>
                                                    <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                                                        <image>
                                                            <Image url="@../images/x.png" />
                                                        </image>
                                                    </ImageView>
                                                </graphic>
                                            </Button>

                                            <Button fx:id="btnTiktok" onAction="#TiktokClicked" styleClass="social-icon-btn">
                                                <graphic>
                                                    <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                                                        <image>
                                                            <Image url="@../images/tiktok.png" />
                                                        </image>
                                                    </ImageView>
                                                </graphic>
                                            </Button>
                                        </HBox>
                                    </children>
                                </HBox>

                                <Label fx:id="lblFriendsPostTitle" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #636e72;" text="Arkadaşının Paylaşımları" visible="false" />

                                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                                    <content>
                                        <VBox fx:id="vboxFriendsPosts" spacing="15" style="-fx-padding: 5 15 20 5;" />
                                    </content>
                                </ScrollPane>

                            </children>
                        </VBox>
                    </children>
                </HBox>

                <VBox fx:id="boxListView" alignment="TOP_CENTER" maxWidth="500" maxHeight="600" spacing="15" styleClass="card" visible="false">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Button onAction="#closeListView" styleClass="btn-secondary" text="← Geri" />
                            <Label fx:id="lblListTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste" />
                        </HBox>
                        <Separator />
                        <ScrollPane fitToWidth="true" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="vboxListContent" spacing="10" style="-fx-padding: 10;" />
                            </content>
                        </ScrollPane>
                    </children>
                    <effect>
                        <DropShadow color="#00000040" radius="30" spread="0.1" />
                    </effect>
                </VBox>

            </children>
        </StackPane>
    </center>
</BorderPane>