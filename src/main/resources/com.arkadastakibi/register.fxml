                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Şifre" textFill="#495057">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="txtPassword" promptText="••••••••" style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 8;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </PasswordField>
