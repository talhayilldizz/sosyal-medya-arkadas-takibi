                        <Hyperlink fx:id="linkLogin" text="Giriş Yap" textFill="#1e88e5">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Hyperlink>
                    </children>
                </VBox>
            </children>

            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>

            <effect>
                <DropShadow height="30.0" offsetY="5.0" radius="14.5" width="30.0">
                    <color>
                        <Color opacity="0.10000000149011612" />
                    </color>
                </DropShadow>
            </effect>
        </VBox>
    </children>
</AnchorPane>