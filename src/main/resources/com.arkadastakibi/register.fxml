                                        <ToggleGroup fx:id="genderGroup" />
                                    </toggleGroup>
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="radioFemale" mnemonicParsing="false" text="Kadın" textFill="#495057" toggleGroup="$genderGroup">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </RadioButton>
                            </children>
                            <VBox.margin>
                                <Insets left="5.0" top="2.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
